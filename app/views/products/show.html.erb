<p class = 'login'>
  <% if current_user %>
    Signed in as <%= current_user.email %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
  <% else %>
    <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
  <% end %>
</p>
<h1>Product: <%= @product.name %></h1>

<div class="product">

<p class='product-description'>Product Description: <%= @product.description %></p>
<p class='price'> <%="Price: #{@product.formatted_price}" %></p>
<%= image_tag(@product.product_img_url,class:'product-img') %>
<p> <%= link_to 'Edit', edit_product_path(@product) %> | <%= link_to 'Delete', @product %> | <%= link_to 'Back', products_url %></p>
</div>
